{% extends "./base.jinja" %}
{% block title %}{{blog.title}}{% endblock %}
{% block content %}
    <div class="card shadow my-3 container" style="min-height: 650px;">
        <h1 class="card-title p-3">
            {{blog.title}}
        </h1>
        <p>Date created : {{blog.date.strftime("%d/%m/%Y %H:%M:%S")}}</p> 
        <p>
            Tags:  
            {% for tag in blog.tag.split(",") %}
                {{tag}}
            {% endfor %}
        </p>
        {% if blog.image %}
            <img src="{{blog.image|static}}" class="relative  img-fluid shadow my-3" style="height: 340px;width: 100% ;bottom: -5px;border-radius: 2rem;"/>
        {% endif %}
        <hr>
        <div class="content">
            {{blog.content|safe}}
        </div>
    </div>
    <style>
        .content img{
            width: 100%;
        }
    </style>
{% endblock %}